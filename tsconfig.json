{
  "include": ["src/*","spec/*"],
  "compileOnSave": true,
    "compilerOptions": {
      "strict": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals":false,
      "noUnusedParameters": false,
      "outDir": "dist",
      "pretty": true,
      "sourceMap": true,
      "typeRoots": [ "./node_modules/@types" ],
      "lib": ["es7"],
      "target": "es5",
      "downlevelIteration": true
    }
}
