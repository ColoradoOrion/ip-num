{
  "include": ["src/*","spec/*"],
  "compileOnSave": true,
    "compilerOptions": {
      "strict": true,
      "moduleResolution": "node",
      "module": "umd",
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals":false,
      "noUnusedParameters": false,
      "outDir": "dist",
      "pretty": true,
      "sourceMap": true,
      "typeRoots": [ "./node_modules/@types" ],
      "lib": ["es6"],
      "target": "es6"
    }
}
